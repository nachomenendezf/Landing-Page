FROM nginx:1.23.0-alpine
#Install tools
RUN apk add vim \
    && apk add curl \
    && apk add nano;

COPY ./Assets /usr/share/nginx/site/dist/front
COPY index.html /usr/share/nginx/site/dist/front
COPY Style.css /usr/share/nginx/site/dist/front
COPY Lato-Regular.ttf /usr/share/nginx/site/dist/front

COPY .devops/conf/default.conf /etc/nginx/conf.d/default.conf
COPY .devops/conf/nginx.conf /etc/nginx/nginx.conf

EXPOSE 3001
CMD [ "nginx" , "-g" , "daemon off;"]